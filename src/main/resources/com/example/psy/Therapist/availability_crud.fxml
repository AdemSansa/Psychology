<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Therapists.AvailabilityCRUDController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <!-- Header with Back Button -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#goToTherapists" styleClass="btn-action" text="← Retour" />
                        <Label styleClass="app-title" text="Gestion des Disponibilités" />
                    </children>
                </HBox>

                <!-- Table View -->
                <TableView fx:id="availTable" prefHeight="350.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="dayColumn" prefWidth="100.0" text="Jour" />
                        <TableColumn fx:id="startColumn" prefWidth="100.0" text="Début" />
                        <TableColumn fx:id="endColumn" prefWidth="100.0" text="Fin" />
                        <TableColumn fx:id="availableColumn" prefWidth="80.0" text="Dispo ?" />
                        <TableColumn fx:id="therapistIdColumn" prefWidth="80.0" text="ID Théra" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- Formulaire -->
                <VBox spacing="10.0" styleClass="form-container">
                    <children>
                        <Label styleClass="subtitle" text="Détails de la disponibilité" />
                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                            <children>
                                <ComboBox fx:id="dayCombo" prefWidth="150.0" promptText="Jour" />
                                <TextField fx:id="startTimeField" promptText="Début (HH:mm)" />
                                <TextField fx:id="endTimeField" promptText="Fin (HH:mm)" />
                                <CheckBox fx:id="availableCheck" mnemonicParsing="false" text="Disponible" selected="true" />
                                <TextField fx:id="therapistIdField" promptText="ID Thérapeute" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleClear" styleClass="btn-action" text="Vider" />
                                <Button mnemonicParsing="false" onAction="#handleDelete" styleClass="btn-delete" text="Supprimer" />
                                <Button mnemonicParsing="false" onAction="#handleUpdate" styleClass="btn-action" text="Modifier" />
                                <Button mnemonicParsing="false" onAction="#handleAdd" styleClass="btn-add" text="Ajouter" />
                            </children>
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
