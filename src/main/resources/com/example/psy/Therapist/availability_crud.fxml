<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" styleClass="background-gradient" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Therapists.AvailabilityCRUDController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <!-- Header with Back Button -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                    <children>
                        <Button mnemonicParsing="false" onAction="#goToTherapists" styleClass="btn-secondary" text="← Back to Therapists" />
                        <Region prefWidth="20" />
                        <Label styleClass="section-title" text="Availability Management" />
                    </children>
                </HBox>

                <!-- Main Content Area -->
                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                     <!-- Left: Table View -->
                     <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                        <TableView fx:id="availTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                                <TableColumn fx:id="dayColumn" prefWidth="100.0" text="Jour" />
                                <TableColumn fx:id="startColumn" prefWidth="100.0" text="Début" />
                                <TableColumn fx:id="endColumn" prefWidth="100.0" text="Fin" />
                                <TableColumn fx:id="availableColumn" prefWidth="80.0" text="Dispo ?" />
                                <TableColumn fx:id="therapistIdColumn" prefWidth="80.0" text="Thérapeute" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                     </VBox>

                     <!-- Right: Form -->
                     <VBox prefWidth="320" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                         <Label style="-fx-font-size: 18px;" styleClass="section-title" text="Details" />
                         
                         <VBox spacing="5">
                             <Label style="-fx-font-weight: bold;" text="Check a date (Optional)" />
                             <DatePicker fx:id="datePicker" prefWidth="300.0" promptText="Select a date to check" styleClass="form-control" />
                             
                             <Label style="-fx-font-weight: bold;" text="Day of week" />
                             <ComboBox fx:id="dayCombo" prefWidth="300.0" promptText="Select day" styleClass="form-control" />
                         </VBox>

                         <HBox spacing="10">
                              <VBox spacing="5" HBox.hgrow="ALWAYS">
                                   <Label style="-fx-font-weight: bold;" text="Start time" />
                                   <TextField fx:id="startTimeField" promptText="HH:mm" styleClass="form-control" />
                              </VBox>
                              <VBox spacing="5" HBox.hgrow="ALWAYS">
                                   <Label style="-fx-font-weight: bold;" text="End time" />
                                   <TextField fx:id="endTimeField" promptText="HH:mm" styleClass="form-control" />
                              </VBox>
                         </HBox>

                         <VBox fx:id="therapistBox" spacing="5">
                             <Label style="-fx-font-weight: bold;" text="Therapist" />
                             <ComboBox fx:id="therapistCombo" prefWidth="300.0" promptText="Select therapist" styleClass="form-control" />
                         </VBox>
                         
                         <CheckBox fx:id="availableCheck" mnemonicParsing="false" selected="true" style="-fx-font-size: 14px; -fx-padding: 5 0 10 0;" text="Is available?" />

                         <Region VBox.vgrow="ALWAYS" />
                         
                         <VBox spacing="10">
                             <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleAdd" styleClass="btn-primary" text="Add Availability" />
                             <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleUpdate" styleClass="btn-secondary" text="Update" />
                             <HBox spacing="10">
                                 <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleDelete" styleClass="logout-btn" text="Delete" HBox.hgrow="ALWAYS" />
                                 <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleClear" styleClass="btn-secondary" text="Clear" HBox.hgrow="ALWAYS" />
                             </HBox>
                         </VBox>
                     </VBox>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
