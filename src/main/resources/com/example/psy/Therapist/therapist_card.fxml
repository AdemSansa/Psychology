<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox fx:id="cardContainer" prefWidth="350.0" prefHeight="230.0" styleClass="therapist-card"
      stylesheets="@../style.css" spacing="12.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="14.0">
            <children>
                <!-- Avatar: initials circle + optional photo on top -->
                <StackPane fx:id="avatarPane" prefHeight="80.0" prefWidth="80.0" styleClass="therapist-initials">
                    <children>
                        <!-- Fallback initials -->
                        <Label fx:id="initialsLabel" text="SD" styleClass="therapist-initials-label" />
                        <!-- Photo (shown when URL is set, clipped to circle) -->
                        <ImageView fx:id="photoView" fitWidth="80.0" fitHeight="80.0"
                                   preserveRatio="false" smooth="true" visible="false">
                            <clip>
                                <Circle centerX="40.0" centerY="40.0" radius="40.0" />
                            </clip>
                        </ImageView>
                    </children>
                </StackPane>
                <VBox>
                    <children>
                        <Label fx:id="nameLabel" text="Sophie Dubois" styleClass="therapist-name" />
                        <Label fx:id="roleLabel" text="Consultation" styleClass="therapist-role" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox spacing="6.0">
            <children>
                <Label fx:id="emailLabel" text="sophie@email.com" styleClass="therapist-detail" />
                <Label fx:id="phoneLabel" text="+216 99222999" styleClass="therapist-detail" />
                <Label fx:id="addressLabel" text="Description..." styleClass="therapist-detail" />
            </children>
        </VBox>
        <Label fx:id="specializationLabel" text="SpÃ©cialisation" styleClass="therapist-detail" wrapText="true" />
        <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="editButton" mnemonicParsing="false" text="Modifier" styleClass="btn-action" prefWidth="100" />
                <Button fx:id="deleteButton" mnemonicParsing="false" text="Supprimer" styleClass="btn-action btn-delete" />
            </children>
        </HBox>
    </children>
</VBox>
