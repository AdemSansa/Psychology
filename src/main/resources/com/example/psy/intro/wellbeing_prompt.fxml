<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="550.0" prefWidth="900.0" styleClass="background-gradient" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Welcome.WellbeingPromptController">

    <VBox alignment="CENTER" spacing="25">
        
        <VBox alignment="CENTER" maxWidth="550" spacing="30" styleClass="login-card">
            
            <Label style="-fx-font-size: 24px; -fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-text-alignment: center;" 
                   styleClass="app-title" 
                   text="Would you like to check your mental well-being?" 
                   wrapText="true"/>
            
            <Label styleClass="subtitle" 
                   style="-fx-font-size: 14px; -fx-text-alignment: center;" 
                   text="This short questionnaire can help you understand how youâ€™re feeling today. It is not a medical diagnosis." 
                   wrapText="true" />
            
            <VBox spacing="15" alignment="CENTER" prefWidth="300">
                <Button maxWidth="300" 
                        onAction="#handleStartCheck" 
                        styleClass="btn-primary" 
                        style="-fx-font-size: 16px; -fx-padding: 12 24;" 
                        text="Start Well-Being Check" />
                
                <Button maxWidth="300" 
                        onAction="#handleSkip" 
                        styleClass="btn-secondary" 
                        text="Skip for now" />
            </VBox>
            
        </VBox>
        
    </VBox>

</StackPane>
