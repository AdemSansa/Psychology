<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="750" prefWidth="1200" styleClass="background-gradient" stylesheets="@../style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="Controllers.Welcome.HomeController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="240" spacing="10" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="30" />
            </padding>

            <!-- Brand Logo Area -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="logo-container">
                <padding><Insets bottom="30" /></padding>
                <!-- Placeholder for logo image if available, using text for now -->
                <Label styleClass="logo-title" text="Slimenify" />
            </HBox>

            <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 10px; -fx-font-weight: bold; -fx-padding: 0 0 5 10;" text="MAIN MENU" />
            
            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="Dashboard" />
            <Button maxWidth="Infinity" onAction="#gotoUsers" styleClass="sidebar-btn" text="Users" />
            <Button maxWidth="Infinity" onAction="#gotoTherapists" styleClass="sidebar-btn" text="Therapists" />
            <Button maxWidth="Infinity" onAction="#gotoEvents" styleClass="sidebar-btn" text="Events" />
            
            <Region VBox.vgrow="ALWAYS" />

            
            <Button maxWidth="Infinity" styleClass="logout-btn" text="Logout" />
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="0">
            <!-- TOP HEADER -->
            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="topbar">
                <Label styleClass="welcome-text" text="Welcome back, Admin" />
                <!-- User Avatar Placeholder -->
                <Circle fill="#ecf0f1" radius="18" stroke="#bdc3c7" />
            </HBox>

            <!-- SCROLLABLE DASHBOARD CONTENT -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <VBox spacing="30" styleClass="dashboard-content">
                    
                    <!-- Welcome Hero Section -->
                    <VBox spacing="10" style="-fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af); -fx-background-radius: 15; -fx-padding: 30;">
                        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Good Morning, Admin!" />
                        <Button style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white;" styleClass="btn-secondary" text="Check Reports" />
                    </VBox>

                    <!-- Stats Grid -->
                    <Label styleClass="section-title" text="Overview" />

                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33.3" />
                            <ColumnConstraints percentWidth="33.3" />
                            <ColumnConstraints percentWidth="33.3" />
                        </columnConstraints>

                        <!-- Users Card -->
                        <VBox styleClass="stat-card, card-blue" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label styleClass="card-title" text="Total Users" />
                            <Label styleClass="card-number" text="1,245" />
                            <Label style="-fx-text-fill: #2ecc71; -fx-font-size: 11px;" text="+12% from last month" />
                        </VBox>

                        <!-- Therapists Card -->
                        <VBox styleClass="stat-card, card-green" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label styleClass="card-title" text="Active Therapists" />
                            <Label styleClass="card-number" text="48" />
                            <Label style="-fx-text-fill: #f39c12; -fx-font-size: 11px;" text="3 pending approval" />
                        </VBox>

                        <!-- Events Card -->
                        <VBox styleClass="stat-card, card-purple" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label styleClass="card-title" text="Upcoming Events" />
                            <Label styleClass="card-number" text="8" />
                            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;" text="Next event in 2 days" />
                        </VBox>
                  <rowConstraints>
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <!-- Recent Activity / Table Placeholder -->
                    <HBox spacing="20">
                         <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                             <Label style="-fx-font-size: 18px;" styleClass="section-title" text="Recent User Signups" />
                             <!-- Table goes here, placeholder for layout -->
                             <Pane prefHeight="200" style="-fx-background-color: #f9f9f9; -fx-background-radius: 8;" /> 
                         </VBox>
                    </HBox>

                </VBox>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
