<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Welcome.HomeController"
            stylesheets="@../style.css"
            prefWidth="1200" prefHeight="750"
            styleClass="background-gradient">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #3e2723; -fx-padding: 20;" prefWidth="220">

            <!-- Logo -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 30 0;">
                <!-- Replace with logo image if available -->
                <ImageView fitWidth="32" fitHeight="32">
                    <image>
                        <Image url="@../media/Logo_nobackground.png"/>
                    </image>
                </ImageView>
                <Label text="Slimenify" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Menu Label -->
            <Label text="MAIN MENU" style="-fx-text-fill: #95a5a6; -fx-font-size: 10px; -fx-font-weight: bold;"/>

            <!-- Sidebar Buttons -->
            <VBox spacing="5">
                <Button fx:id="btnDashboard"
                        text="Dashboard"
                        styleClass="sidebar-btn "
                        maxWidth="Infinity"/>
                <Button fx:id="btnUsers" text="Users" styleClass="sidebar-btn" onAction="#gotoUsers" maxWidth="Infinity"/>
                <Button fx:id="btnTherapists" text="Therapists" styleClass="sidebar-btn" onAction="#gotoTherapists" maxWidth="Infinity"/>
                <Button fx:id="btnEvents" text="Events" styleClass="sidebar-btn" onAction="#gotoEvents" maxWidth="Infinity"/>
                <Button fx:id="btnAppointments" text="Appointments" styleClass="sidebar-btn" onAction="#gotoAppoitnments" maxWidth="Infinity"/>
                <Button fx:id="btnPastAppointments" text="Past Appointments" styleClass="sidebar-btn" onAction="#gotoPastAppointments" maxWidth="Infinity"/>
                <Button fx:id="btnForum" onAction="#gotoReviewadmin" styleClass="sidebar-btn"  text="forumadmin" />
                <Button fx:id="btnForumtherapist" onAction="#gotoReviewtherapist" styleClass="sidebar-btn"  text="forum" />
                <Button fx:id="btnForumUsr" onAction="#gotoReview" styleClass="sidebar-btn"  text="forum" />
                <Button fx:id="btnQuestions" text="Questions" styleClass="sidebar-btn" onAction="#gotoQuestions" maxWidth="Infinity"/>
                <Button fx:id="btnQuizzes" text="Quizzes" styleClass="sidebar-btn" onAction="#gotoQuiz" maxWidth="Infinity"/>
                <Button fx:id="btnQuizAssessment" text="Quiz Assesment (For patient)" styleClass="sidebar-btn" onAction="#gotoQuizAssesment" maxWidth="Infinity"/>
            </VBox>

            <!-- Spacer pushes logout to bottom -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Logout Button -->
            <Button text="DÃ©connexion"

                    styleClass="logout-btn"
                    onAction="#logout"
                    maxWidth="Infinity"/>        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="0">

            <HBox alignment="CENTER_LEFT"
                  spacing="20"
                  prefHeight="70"
                  styleClass="top-header">

                <!-- LEFT : ROLE -->
                <VBox alignment="CENTER_LEFT" spacing="2">
                    <Label fx:id="RoleLabel"
                           text="ADMIN"
                           styleClass="role-text"/>
                    <Label text="Your access level"
                           styleClass="subtitle-text"/>
                </VBox>

                <!-- SPACER -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- RIGHT : WELCOME -->
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="welcomeLabel"
                           text="Welcome, Adem"
                           styleClass="welcome-text"/>
                    <Label text="Glad to see you again ðŸ‘‹"
                           styleClass="subtitle-text"/>
                </VBox>

                <!-- AVATAR -->
                <StackPane>
                    <Circle radius="22" styleClass="avatar-circle"/>
                    <Label text="A" styleClass="avatar-text"/>
                </StackPane>

            </HBox>
            <!-- CONTENT AREA -->
            <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
