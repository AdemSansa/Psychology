<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Welcome.HomeController"
            stylesheets="@../style.css"
            prefWidth="1200" prefHeight="750"
            styleClass="background-gradient">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="240">
            <padding>
                <Insets top="30" left="15" right="15" bottom="20"/>
            </padding>

            <!-- Brand Logo Area -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="logo-container">
                <padding><Insets bottom="30"/></padding>
                <!-- Placeholder for logo image if available, using text for now -->
                <Label text="Slimenify" styleClass="logo-title"/>
            </HBox>

            <Label text="MAIN MENU" style="-fx-text-fill: #95a5a6; -fx-font-size: 10px; -fx-font-weight: bold; -fx-padding: 0 0 5 10;"/>
            
            <Button text="Dashboard" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="Users" styleClass="sidebar-btn" onAction="#gotoUsers" maxWidth="Infinity"/>
            <Button text="Therapists" styleClass="sidebar-btn" onAction="#gotoTherapists" maxWidth="Infinity"/>
            <Button text="Events" styleClass="sidebar-btn" onAction="#gotoEvents" maxWidth="Infinity"/>
            <Button text="Appoitnments" styleClass="sidebar-btn" onAction="#gotoAppoitnments" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS" />
            
            <Button text="Logout" styleClass="logout-btn" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="0">
            <!-- TOP HEADER -->
            <HBox alignment="CENTER_RIGHT" styleClass="topbar" spacing="15">
                <Label text="Welcome back, Admin" styleClass="welcome-text"/>
                <!-- User Avatar Placeholder -->
                <Circle radius="18" fill="#ecf0f1" stroke="#bdc3c7"/>
            </HBox>

            <!-- SCROLLABLE DASHBOARD CONTENT -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <VBox spacing="30" styleClass="dashboard-content">
                    
                    <!-- Welcome Hero Section -->
                    <VBox spacing="10" style="-fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af); -fx-background-radius: 15; -fx-padding: 30;">
                        <Label text="Good Morning, Admin!" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <Button text="Check Reports" styleClass="btn-secondary" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white;"/>
                    </VBox>

                    <!-- Stats Grid -->
                    <Label text="Overview" styleClass="section-title"/>

                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33.3"/>
                            <ColumnConstraints percentWidth="33.3"/>
                            <ColumnConstraints percentWidth="33.3"/>
                        </columnConstraints>

                        <!-- Users Card -->
                        <VBox styleClass="stat-card, card-blue" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Total Users" styleClass="card-title"/>
                            <Label text="1,245" styleClass="card-number"/>
                            <Label text="+12% from last month" style="-fx-text-fill: #2ecc71; -fx-font-size: 11px;"/>
                        </VBox>

                        <!-- Therapists Card -->
                        <VBox styleClass="stat-card, card-green" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Active Therapists" styleClass="card-title"/>
                            <Label text="48" styleClass="card-number"/>
                            <Label text="3 pending approval" style="-fx-text-fill: #f39c12; -fx-font-size: 11px;"/>
                        </VBox>

                        <!-- Events Card -->
                        <VBox styleClass="stat-card, card-purple" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label text="Upcoming Events" styleClass="card-title"/>
                            <Label text="8" styleClass="card-number"/>
                            <Label text="Next event in 2 days" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                        </VBox>
                    </GridPane>

                    <!-- Recent Activity / Table Placeholder -->
                    <HBox spacing="20">
                         <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                             <Label text="Recent User Signups" styleClass="section-title" style="-fx-font-size: 18px;"/>
                             <!-- Table goes here, placeholder for layout -->
                             <Pane prefHeight="200" style="-fx-background-color: #f9f9f9; -fx-background-radius: 8;"/> 
                         </VBox>
                    </HBox>

                </VBox>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
