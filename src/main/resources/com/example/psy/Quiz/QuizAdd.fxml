<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Quiz.QuizAddController"
            stylesheets="@../style.css"
            prefHeight="700.0" prefWidth="900.0">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="â† Back" onAction="#handleBack" styleClass="btn-secondary"/>
            <Label text="Create New Quiz" styleClass="page-title"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20">
                <padding>
                    <Insets top="20" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Quiz Details Section -->
                <VBox spacing="10" styleClass="card">
                    <Label text="Quiz Details" styleClass="section-header"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="titleField" promptText="Enter quiz title" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="categoryComboBox" promptText="Select category" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>

                        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                        <TextArea fx:id="descriptionArea" promptText="Enter quiz description" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Min Score:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Spinner fx:id="minScoreSpinner" editable="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Max Score:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Spinner fx:id="maxScoreSpinner" editable="true" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Questions Section -->
                <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Questions" styleClass="section-header"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Question" onAction="#handleAddQuestionDialog" styleClass="btn-secondary"/>
                    </HBox>

                    <TableView fx:id="questionsTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="colQuestionText" text="Question" prefWidth="400"/>
                            <TableColumn fx:id="colQuestionRequired" text="Required" prefWidth="80"/>
                            <TableColumn fx:id="colQuestionActions" text="Actions" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button text="Cancel" onAction="#handleBack" styleClass="btn-secondary"/>
                    <Button text="Save Quiz" onAction="#handleSaveQuiz" styleClass="btn-primary"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
