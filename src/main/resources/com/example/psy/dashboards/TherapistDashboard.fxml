<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.dashboards.TherapistDashboardController" styleClass="futuristic-root">
    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="ORBITAL DASHBOARD" style="-fx-font-size: 28px; -fx-font-weight: 900; -fx-text-fill: #38bdf8; -fx-font-family: 'Segoe UI', sans-serif; -fx-effect: dropshadow(gaussian, #0ea5e9, 5, 0.4, 0, 0);" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Logout" styleClass="btn-neon-secondary" onAction="#handleLogout" />
            </HBox>

            <!-- Stat Cards -->
            <HBox spacing="30.0" alignment="CENTER_LEFT">
                <VBox styleClass="futuristic-card" HBox.hgrow="ALWAYS">
                    <Label text="TOTAL PATIENTS" styleClass="futuristic-stat-title" />
                    <Label fx:id="totalPatientsLabel" text="0" styleClass="futuristic-stat-value" />
                </VBox>
                <VBox styleClass="futuristic-card" HBox.hgrow="ALWAYS">
                    <Label text="LIFETIME SESSIONS" styleClass="futuristic-stat-title" />
                    <Label fx:id="totalSessionsLabel" text="0" styleClass="futuristic-stat-value" />
                </VBox>
                <VBox styleClass="futuristic-card" HBox.hgrow="ALWAYS">
                    <Label text="SESSION ATTENDANCE" styleClass="futuristic-stat-title" />
                    <Label fx:id="attendanceRateLabel" text="0%" styleClass="futuristic-stat-value" />
                </VBox>
            </HBox>

            <!-- Charts Area -->
            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <!-- Mood Trend (Line Chart) -->
                <VBox HBox.hgrow="ALWAYS" spacing="10.0" styleClass="futuristic-card" style="-fx-padding: 15;">
                    <Label text="PATIENT MOOD MATRIX" style="-fx-font-size: 14px; -fx-text-fill: #e2e8f0; -fx-font-weight: bold;" />
                    <LineChart fx:id="moodTrendChart" legendVisible="false" VBox.vgrow="ALWAYS" styleClass="futuristic-chart">
                        <xAxis><CategoryAxis label="Date / Session" /></xAxis>
                        <yAxis><NumberAxis label="Mood Matrix" lowerBound="0" upperBound="4" tickUnit="1" autoRanging="false" /></yAxis>
                    </LineChart>
                </VBox>

                <!-- Attendance Rate (Pie Chart) -->
                <VBox HBox.hgrow="ALWAYS" spacing="10.0" styleClass="futuristic-card" style="-fx-padding: 15;">
                    <Label text="ATTENDANCE RATIO" style="-fx-font-size: 14px; -fx-text-fill: #e2e8f0; -fx-font-weight: bold;" />
                    <PieChart fx:id="attendanceChart" VBox.vgrow="ALWAYS" styleClass="futuristic-chart" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
