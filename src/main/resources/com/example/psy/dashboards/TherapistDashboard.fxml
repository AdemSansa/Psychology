<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.dashboards.TherapistDashboardController">
    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Progress Tracking Dashboard" styleClass="section-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Logout" styleClass="btn-secondary" onAction="#handleLogout" />
            </HBox>

            <!-- Stat Cards -->
            <HBox spacing="30.0" alignment="CENTER_LEFT">
                <VBox styleClass="stat-card">
                    <Label text="Total Patients" styleClass="card-title" />
                    <Label fx:id="totalPatientsLabel" text="0" styleClass="card-number" />
                </VBox>
                <VBox styleClass="stat-card">
                    <Label text="Total Sessions" styleClass="card-title" />
                    <Label fx:id="totalSessionsLabel" text="0" styleClass="card-number" />
                </VBox>
                <VBox styleClass="stat-card">
                    <Label text="Avg. Attendance" styleClass="card-title" />
                    <Label fx:id="attendanceRateLabel" text="0%" styleClass="card-number" />
                </VBox>
            </HBox>

            <!-- Charts Area -->
            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <!-- Mood Trend (Line Chart) -->
                <VBox HBox.hgrow="ALWAYS" spacing="10.0" styleClass="quiz-card" style="-fx-padding: 15;">
                    <Label text="Mood Trend (Recent Notes)" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <LineChart fx:id="moodTrendChart" legendVisible="false" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis label="Date / Session" /></xAxis>
                        <yAxis><NumberAxis label="Mood (Scale 1-3)" lowerBound="0" upperBound="4" tickUnit="1" autoRanging="false" /></yAxis>
                    </LineChart>
                </VBox>

                <!-- Attendance Rate (Pie Chart) -->
                <VBox HBox.hgrow="ALWAYS" spacing="10.0" styleClass="quiz-card" style="-fx-padding: 15;">
                    <Label text="Attendance Breakdown" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <PieChart fx:id="attendanceChart" VBox.vgrow="ALWAYS" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
