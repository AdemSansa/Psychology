<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.User.UserListController"
            stylesheets="@../style.css"
            prefWidth="1000" prefHeight="650"
            styleClass="background-gradient">

    <VBox spacing="20"
          AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30"
          AnchorPane.bottomAnchor="30">

        <!-- Header Card -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
             <Label text="User Management" styleClass="section-title"/>
             <Region HBox.hgrow="ALWAYS"/>
             <Button text="+ Add New User" onAction="#GoToUserAdd" styleClass="btn-primary"/>
        </HBox>

        <!-- Table Card -->
        <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField promptText="Search users..." styleClass="form-control" prefWidth="300"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Edit Selected" onAction="#GoToUserEdit" styleClass="btn-secondary"/>
                <Button text="Delete Selected" onAction="#deleteUser" styleClass="logout-btn"/>
            </HBox>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn text="ID" fx:id="idColumn" prefWidth="80"/>
                    <TableColumn text="Full Name" fx:id="nameColumn" prefWidth="250"/>
                    <TableColumn text="Email" fx:id="emailColumn" prefWidth="300"/>
                    <TableColumn text="Role" fx:id="roleColumn" prefWidth="150"/>
                    <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>

</AnchorPane>