<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.User.UserListController"
            stylesheets="@../style.css"
            prefWidth="900" prefHeight="550">

    <Pane prefWidth="900" prefHeight="550" styleClass="background"/>

    <VBox spacing="20"
          layoutX="80"
          layoutY="60"
          prefWidth="740"
          styleClass="login-card">

        <Label text="User Management"
               styleClass="app-title"/>

        <!-- User Table -->
        <TableView fx:id="userTable" prefHeight="350">

            <columns>
                <TableColumn text="ID" fx:id="idColumn" prefWidth="60"/>
                <TableColumn text="Full Name" fx:id="nameColumn" prefWidth="200"/>
                <TableColumn text="Email" fx:id="emailColumn" prefWidth="240"/>
                <TableColumn text="Role" fx:id="roleColumn" prefWidth="120"/>
                <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="140"/>
            </columns>

        </TableView>

        <!-- Actions -->
        <HBox spacing="15">
            <Button text="Add User"                 onAction="#GoToUserAdd"
                    styleClass="login-button"/>
            <Button text="Edit User" onAction="#GoToUserEdit" styleClass="login-button"/>
            <Button text="Delete User"  onAction="#deleteUser" styleClass="login-button"/>
        </HBox>

    </VBox>

</AnchorPane>