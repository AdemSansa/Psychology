<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.User.UserEditController"
            stylesheets="@../style.css"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox spacing="15"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- Title -->
            <Label text="Edit User"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <Separator />

            <!-- Form -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <!-- Full Name -->
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="fullNameField"
                           promptText="Enter full name"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField"
                           promptText="Enter email"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <!-- Username -->
                <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField"
                           promptText="Enter username"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <!-- Role -->
                <Label text="Role:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roleComboBox"
                          promptText="Select role"
                          GridPane.rowIndex="3"
                          GridPane.columnIndex="1"/>

            </GridPane>

            <Separator />

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancel"
                        onAction="#handleCancel"
                        style="-fx-background-color: #ccc;" />

                <Button text="Save"
                        onAction="#handleSave"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
