<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.User.UserAddController"
            stylesheets="@../style.css"
            prefHeight="500.0" prefWidth="500.0"
            styleClass="background-gradient">

    <VBox alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" maxWidth="500">
            
            <Label text="Add New User" styleClass="section-title" style="-fx-font-size: 20px;"/>
            
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Full Name" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-control"/>

                <Label text="Username" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-control"/>

                <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="email@example.com" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-control"/>

                <Label text="Password" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-control"/>

                <Label text="Role" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="roleComboBox" promptText="Select Role" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-control" maxWidth="Infinity"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button text="Cancel" styleClass="btn-secondary"/>
                <Button fx:id="addButton" text="Add User" onAction="#handleAdd" styleClass="btn-primary"/>
            </HBox>

        </VBox>
    </VBox>
</AnchorPane>
