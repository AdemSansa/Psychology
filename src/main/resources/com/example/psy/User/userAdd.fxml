<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.User.UserAddController"
            stylesheets="@../style.css"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="root user-add-root">

    <children>
        <GridPane layoutX="20.0" layoutY="20.0" hgap="10.0" vgap="10.0" styleClass="form-grid">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Nom complet :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="fullNameField" promptText="Nom complet" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-control"/>

            <Label text="Nom d'utilisateur :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="usernameField" promptText="Nom d'utilisateur" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-control"/>

            <Label text="Email :" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="emailField" promptText="email@example.com" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-control"/>

            <Label text="Mot de passe :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
            <PasswordField fx:id="passwordField" promptText="Mot de passe" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-control"/>

            <Label text="RÃ´le :" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="roleComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-control form-combo"/>

            <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd"
                    GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                    styleClass="btn btn-primary"/>
        </GridPane>
    </children>
</AnchorPane>
