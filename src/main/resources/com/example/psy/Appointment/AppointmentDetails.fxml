<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Appointment.AppointmentDetailsController"
      spacing="18"
      alignment="TOP_CENTER"
      stylesheets="@../style.css"
      styleClass="root"
      prefWidth="400"
      prefHeight="600">

    <!-- Section Title -->
    <Label text="Appointment Details" styleClass="section-title"/>

    <!-- Appointment Info -->
    <VBox spacing="8" alignment="CENTER">
        <Label fx:id="dateLabel" styleClass="text-soft"/>
        <Label fx:id="timeLabel" styleClass="text-soft"/>
        <Label fx:id="statusLabel" styleClass="badge-status"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="confirmBtn"
                text="Confirm"
                onAction="#confirmAppointment"
                styleClass="btn-success"
                visible="false"
                managed="false"/>
        <Button fx:id="cancelBtn"
                text="Cancel Appointment"
                onAction="#cancelAppointment"
                styleClass="btn-danger"/>
    </HBox>

    <!-- Notes Section -->
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 10; -fx-border-color: gray; -fx-border-width: 1; -fx-background-color: #ffffff;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Notes" styleClass="section-title"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addNoteBtn"
                    text="Add Note"
                    onAction="#addNote"
                    styleClass="btn-success"
                    visible="false"
                    managed="false"/>
            <Button fx:id="aiSummaryBtn"
                    text="âœ¨ Generate AI Summary"
                    onAction="#generateAISummary"
                    styleClass="btn-secondary"
                    visible="false"
                    managed="false"/>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="200">
            <VBox fx:id="notesContainer" spacing="8">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Close Button -->
    <Button text="Close"
            onAction="#closeWindow"
            styleClass="btn-secondary"/>
</VBox>
