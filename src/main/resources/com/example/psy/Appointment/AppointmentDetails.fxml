<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Appointment.AppointmentDetailsController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@../style.css"
      style="-fx-padding: 30;"
      prefWidth="450"
      prefHeight="650">

    <!-- Section Title -->
    <Label text="SESSION DETAILS" style="-fx-font-size: 22px; -fx-font-weight: 900; -fx-font-family: 'Segoe UI', sans-serif;"/>

    <!-- Appointment Info -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #cccccc; -fx-border-radius: 10;">
        <Label fx:id="dateLabel" style="-fx-font-size: 14px;"/>
        <Label fx:id="timeLabel" style="-fx-font-size: 14px;"/>
        <Label fx:id="statusLabel"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="confirmBtn"
                text="Confirm"
                onAction="#confirmAppointment"
                visible="false"
                managed="false"/>
        <Button fx:id="cancelBtn"
                text="Cancel Appointment"
                onAction="#cancelAppointment"/>
    </HBox>

    <!-- Notes Section -->
    <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 10;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="CLINICAL NOTES" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addNoteBtn"
                    text="Add Note"
                    onAction="#addNote"
                    visible="false"
                    managed="false"/>
            <Button fx:id="aiSummaryBtn"
                    text="âœ¨ AI Summary"
                    onAction="#generateAISummary"
                    visible="false"
                    managed="false"/>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="220">
            <VBox fx:id="notesContainer" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Close Button -->
    <Button text="Close"
            onAction="#closeWindow"/>
</VBox>
