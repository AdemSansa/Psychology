<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Appointment.AppointmentCalendarController"
            stylesheets="@../style.css"
            styleClass="root">

    <top>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="Appointment Management" styleClass="section-title"/>

            <ComboBox fx:id="therapistComboBox"
                      promptText="Select Therapist"
                      styleClass="form-control"/>

            <Button text="Refresh"
                    fx:id="refreshBtn"
                    onAction="#refreshCalendar"
                    styleClass="btn-secondary"/>
        </VBox>
    </top>

    <center>
        <VBox fx:id="calendarContainer"
              style="-fx-padding: 10;"
              VBox.vgrow="ALWAYS">
            <!-- CalendarView will be added programmatically -->
        </VBox>
    </center>

</BorderPane>
