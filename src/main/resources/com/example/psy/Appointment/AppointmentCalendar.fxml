<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Appointment.AppointmentCalendarController"
            stylesheets="@../style.css">

    <!-- TOP SECTION -->
    <top>
        <VBox fx:id="topContainer" spacing="15" style="-fx-padding: 20;">
            <padding>
                <Insets top="15" right="25" bottom="20" left="25"/>
            </padding>

            <!-- Header Row -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5">
                    <Label text="ORBITAL CALENDAR"
                           style="-fx-font-size: 28px; -fx-font-weight: 900; -fx-font-family: 'Segoe UI', sans-serif;"/>
                    
                    <Label fx:id="subtitleLabel"
                           text="Synchronize with your therapist across the network"
                           style="-fx-font-size: 14px;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Therapist Controls Row -->
            <HBox fx:id="therapistControlsRow" spacing="15" alignment="CENTER_LEFT">
                <Label text="SELECT THERAPIST NODE:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <ComboBox fx:id="therapistComboBox"
                          promptText="Establishing connection..."/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER SECTION: Calendar -->
    <center>
        <VBox fx:id="calendarContainer"
              style="-fx-padding: 20;"
              VBox.vgrow="ALWAYS">
            <!-- Calendar View will be injected here via code -->
        </VBox>
    </center>

</BorderPane>
