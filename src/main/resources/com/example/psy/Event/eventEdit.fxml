<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Event.EventEditController"
            styleClass="background-gradient" stylesheets="@../style.css"
            prefHeight="600.0" prefWidth="700.0">

    <children>
        <ScrollPane fitToWidth="true"
                    AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    style="-fx-background-color: transparent; -fx-background: transparent;">

            <content>
                <VBox alignment="CENTER" spacing="15">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" maxWidth="650">

                        <Label text="Edit Event Details"
                               styleClass="section-title" style="-fx-font-size: 22px;" />

                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50"/>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50"/>
                            </columnConstraints>

                            <!-- Image Upload -->
                            <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="0">
                                <Label text="Event Banner" style="-fx-font-weight: bold;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Button text="ðŸ“‚ Change Image..." onAction="#handleBrowseImage" styleClass="btn-secondary"/>
                                    <Label fx:id="imagePathLabel" text="No file selected" style="-fx-text-fill: gray; -fx-font-style: italic;" maxWidth="400" wrapText="true"/>
                                </HBox>
                                <ImageView fx:id="eventImageView"
                                           fitHeight="200"
                                           fitWidth="550"
                                           preserveRatio="true"
                                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"/>
                            </VBox>

                            <!-- Title -->
                            <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="1">
                                <Label text="Title" style="-fx-font-weight: bold;"/>
                                <TextField fx:id="titleField" promptText="Event title" styleClass="form-control" />
                                <Label fx:id="titleError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Description -->
                            <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                <Label text="Description" style="-fx-font-weight: bold;"/>
                                <TextArea fx:id="descriptionField" promptText="Event description" prefRowCount="3" styleClass="form-control" wrapText="true"/>
                                <Label fx:id="descriptionError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Start -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                <Label text="Start Date Time" style="-fx-font-weight: bold;"/>
                                <HBox spacing="10">
                                    <DatePicker fx:id="dateStartPicker" maxWidth="Infinity" styleClass="form-control" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="timeStartField" promptText="HH:mm" styleClass="form-control" prefWidth="80"/>
                                </HBox>
                                <Label fx:id="dateStartError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- End -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                <Label text="End Date Time" style="-fx-font-weight: bold;"/>
                                <HBox spacing="10">
                                    <DatePicker fx:id="dateEndPicker" maxWidth="Infinity" styleClass="form-control" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="timeEndField" promptText="HH:mm" styleClass="form-control" prefWidth="80"/>
                                </HBox>
                                <Label fx:id="dateEndError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Type -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                <Label text="Type" style="-fx-font-weight: bold;"/>
                                <ComboBox fx:id="typeComboBox" promptText="Select event type" styleClass="form-control" maxWidth="Infinity">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="online"/>
                                            <String fx:value="physique"/>
                                            <String fx:value="hybride"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <Label fx:id="typeError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Status -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                <Label text="Status" style="-fx-font-weight: bold;"/>
                                <ComboBox fx:id="statusComboBox" promptText="Select status" styleClass="form-control" maxWidth="Infinity">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="draft"/>
                                            <String fx:value="published"/>
                                            <String fx:value="cancelled"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <Label fx:id="statusError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Location -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                <Label text="Location" style="-fx-font-weight: bold;"/>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <TextField fx:id="locationField" promptText="Event location" styleClass="form-control" HBox.hgrow="ALWAYS"/>
                                    <Button text="&#128205; Pick" onAction="#handlePickLocation" styleClass="btn-secondary"
                                            style="-fx-font-size: 12px; -fx-padding: 6 10;"/>
                                </HBox>
                                <Label fx:id="locationError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                            <!-- Max -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                <Label text="Max Participants" style="-fx-font-weight: bold;"/>
                                <TextField fx:id="maxParticipantsField" promptText="Number" styleClass="form-control" />
                                <Label fx:id="maxParticipantsError" text="" style="-fx-text-fill: red; -fx-font-size: 11px;" visible="false" managed="false"/>
                            </VBox>

                        </GridPane>

                        <!-- Buttons -->
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button text="Cancel"
                                    onAction="#handleCancel"
                                    styleClass="btn-secondary" />

                            <Button text="Save Changes"
                                    onAction="#handleUpdateEvent"
                                    styleClass="btn-primary" />
                        </HBox>

                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
