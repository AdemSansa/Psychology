<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Event.RegistrationListController"
            stylesheets="@../style.css"
            styleClass="background-gradient">

    <top>
        <VBox spacing="10" style="-fx-padding:20;">
            <Label fx:id="titleLabel" styleClass="section-title"/>
            <TextField fx:id="searchField" promptText="Search participant..." />
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">

            <TextField fx:id="nameField" promptText="Participant name"/>
            <ComboBox fx:id="statusBox"/>

            <Button text="Add / Update" onAction="#handleAddOrUpdate"
                    styleClass="btn-primary"/>

            <ScrollPane fitToWidth="true">
                <FlowPane fx:id="cardContainer" hgap="15" vgap="15"/>
            </ScrollPane>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding:10;">
            <Label fx:id="totalLabel"/>
        </HBox>
    </bottom>

</BorderPane>
