<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Question.QuestionAddController"
            prefHeight="600.0" prefWidth="650.0"
            styleClass="background-gradient"
            stylesheets="@../style.css">

    <top>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Add New Question" styleClass="section-title"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="background-gradient" style="-fx-background-color: transparent;">
            <VBox spacing="15">
                <padding>
                    <Insets top="10" right="30" bottom="20" left="30"/>
                </padding>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Question Text -->
                    <Label text="Question Text:" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                    <VBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <StackPane alignment="TOP_RIGHT">
                           <TextArea fx:id="txtQuestionText" styleClass="form-control" promptText="Enter question text here..." prefRowCount="4" wrapText="true"/>
                           <Button fx:id="btnRecord" onAction="#handleToggleRecord" styleClass="btn-record" text="ðŸŽ¤">
                               <StackPane.margin>
                                   <Insets top="5" right="5"/>
                               </StackPane.margin>
                           </Button>
                        </StackPane>
                        <HBox spacing="10">
                            <Button fx:id="btnSuggest" text="âœ¨ Get AI Suggestions" onAction="#handleSuggest" styleClass="btn-suggest"/>
                            <Label fx:id="lblRecordStatus" text="" styleClass="record-status" visible="false"/>
                        </HBox>
                    </VBox>

                    <!-- Image Path -->
                    <Label text="Image Path:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtImagePath" styleClass="form-control" promptText="Optional image path or URL" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- Required Checkbox -->
                    <CheckBox fx:id="chkRequired" text="Required Answer" selected="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- AI Suggestions Section -->
                <Label fx:id="lblSuggestionStatus" text="" style="-fx-font-size: 13px; -fx-text-fill: #6f4e37; -fx-font-style: italic;" managed="false" visible="false"/>

                <VBox fx:id="suggestionsContainer" spacing="8" managed="false" visible="false">
                    <padding>
                        <Insets top="5" right="0" bottom="5" left="0"/>
                    </padding>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="30" bottom="20" left="30"/>
            </padding>
            <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel" styleClass="btn-secondary"/>
            <Button fx:id="btnAdd" text="Add Question" onAction="#handleAdd" styleClass="btn-primary"/>
        </HBox>
    </bottom>

</BorderPane>
