<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.forum.ForumController"
      spacing="40"
      style="-fx-padding: 40; -fx-background-color: #f4f6f9;">

    <!-- LEFT SIDE -->
    <VBox spacing="20" prefWidth="400">

        <Label text="Explain your situation to our therapist"
               style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <Label text="Submit your request anonymously and receive help within 48h."
               style="-fx-text-fill: #5a6a85;" />

        <VBox spacing="10"
              style="-fx-background-color: #e9eef3;
                     -fx-padding: 20;
                     -fx-background-radius: 15;">

            <Label text="What is your concern?"
                   style="-fx-font-weight: bold;" />

            <TextArea fx:id="contentField"
                      prefHeight="150"
                      wrapText="true"
                      style="-fx-background-radius: 10;" />

            <Button text="Submit question"
                    onAction="#addReview"
                    style="-fx-background-color: #2cb5a0;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;" />
        </VBox>

    </VBox>

    <!-- RIGHT SIDE -->
    <ScrollPane fitToWidth="true" prefWidth="500">
        <content>
            <VBox fx:id="reviewContainer" spacing="15"/>
        </content>
    </ScrollPane>

</HBox>
