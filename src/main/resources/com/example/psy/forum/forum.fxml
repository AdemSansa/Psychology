<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.forum.ForumController"
      spacing="40"
      style="-fx-padding: 40; -fx-background-color: #F0F8F5;">

    <!-- LEFT SIDE -->
    <VBox spacing="20" prefWidth="400"
          style="-fx-background-color:#F5F5DC;
                 -fx-padding:20;
                 -fx-background-radius:20;">

        <Label text="âœ¨ Share Your Experience"
               style="-fx-font-size:22px;
                      -fx-font-weight:bold;
                      -fx-text-fill:#2E7D32;" />

        <Label text="Your words may inspire and help someone today."
               style="-fx-text-fill:#4E6E58;" />

        <TextArea fx:id="contentField"
                  prefHeight="150"
                  wrapText="true"
                  promptText="Write something meaningful..."
                  style="-fx-background-radius:15;" />

        <Button text="ðŸŒ¿ Submit Message"
                onAction="#addReview"
                style="-fx-background-color:#A5D6A7;
                       -fx-text-fill:#1B5E20;
                       -fx-font-weight:bold;
                       -fx-background-radius:20;
                       -fx-padding:8 20;" />
    </VBox>

    <!-- RIGHT SIDE -->
    <ScrollPane fitToWidth="true" prefWidth="600">
        <content>
            <VBox fx:id="reviewContainer" spacing="15"/>
        </content>
    </ScrollPane>

</HBox>
